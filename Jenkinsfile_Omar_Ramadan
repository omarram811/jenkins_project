pipeline {
    agent any
    environment {
        VIRTUAL_ENV = 'venv'
    }
    stages {
        stage('Setup') {
            steps {
                script {
                    // Create virtual environment if not already existing
                    if (!fileExists("${WORKSPACE}\\venv\\Scripts\\activate")) {
                        bat "python -m venv venv"
                    }
                    // Activate the virtual environment and install requirements
                    bat """
                    set PYTHONPATH=%PYTHONPATH%;${WORKSPACE}
                    venv\\Scripts\\activate && pip install -r requirements.txt
                    """
                }
            }
        }
        stage('Lint') {
            steps {
                script {
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && flake8 app.py"
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    bat "${VIRTUAL_ENV}\\Scripts\\activate && pytest"
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    echo "Deploying application..."
                }
            }
        }
    }
    post {
        always {
            cleanWs() 
        }
    }
}
