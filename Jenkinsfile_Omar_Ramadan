pipeline {
    agent any
    environment {
        // Set PYTHONPATH explicitly for Python imports
        PYTHONPATH = "${env.WORKSPACE}"
    }
    stages {
        stage('Setup') {
            steps {
                script {
                    // Create the virtual environment and install dependencies
                    bat 'python -m venv venv'
                    bat 'set PYTHONPATH=%WORKSPACE% && venv\\Scripts\\activate && pip install -r requirements.txt'
                }
            }
        }
        stage('Lint') {
            steps {
                script {
                    // Run linting (flake8)
                    bat 'set PYTHONPATH=%WORKSPACE% && venv\\Scripts\\activate && flake8 app.py'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    // Run tests (pytest)
                    bat 'set PYTHONPATH=%WORKSPACE% && venv\\Scripts\\activate && pytest'
                }
            }
        }
        stage('Coverage') {
            steps {
                script {
                    // Run code coverage
                    bat 'set PYTHONPATH=%WORKSPACE% && venv\\Scripts\\activate && coverage run -m pytest'
                    bat 'set PYTHONPATH=%WORKSPACE% && venv\\Scripts\\activate && coverage report -m'
                    bat 'set PYTHONPATH=%WORKSPACE% && venv\\Scripts\\activate && coverage html' // Optional: generates HTML report
                }
            }
        }
        stage('Security Scan') {
            steps {
                script {
                    // Run security scanning with bandit
                    bat 'set PYTHONPATH=%WORKSPACE% && venv\\Scripts\\activate && bandit -r .'
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    bat 'echo Deploying application...'
                    bat 'set PYTHONPATH=%WORKSPACE% && venv\\Scripts\\activate && python app.py'
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
